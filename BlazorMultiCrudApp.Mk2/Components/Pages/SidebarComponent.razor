                            </div>
                        </a>
                    </li>
                    <li class="cursorStyle" style="list-style:none">
                        <a class="nav-link active fw-bold" href="datalake">
                            <div class="hstack text-wrap">
                                <span class="bi bi-file-medical fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Datalake</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>
</div>

@code {
    private string ShowGroup1Viz = "hidden";
    private string ShowGroup2Viz = "hidden";

    public bool ShowHide1 { get; set; } = false;
    public bool ShowHide2 { get; set; } = false;

    private void ShowGroup1Container()
    {
        ShowHide1 = !ShowHide1;
        ShowGroup1Viz = ShowHide1 ? "visible" : "hidden";
    }
    private void ShowGroup2Container()
    {
        ShowHide2 = !ShowHide2;
        ShowGroup2Viz = ShowHide2 ? "visible" : "hidden";
    }
}

