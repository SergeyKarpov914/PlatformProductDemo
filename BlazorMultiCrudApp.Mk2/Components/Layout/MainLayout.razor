@using NetcodeHub.Packages.UI.Templates.Breeze
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar" style="background-image:none; background-color: whitesmoke;">
        <NavMenu />
    </div>
    
    <main>
        <div class="top-row px-4">
            <a href="https://github.com/SergeyKarpov914/Asp.PlatformDemo">
                <img src="/images/github.png" width="40" height="40">
            </a>
        </div>

        
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

